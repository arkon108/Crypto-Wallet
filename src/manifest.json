{
  "name": "Crypto Wallet",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Quickly check the state of your crypto assets in chosen currency",
  "homepage_url": "https://github.com/arkon108/Crypto-Wallet",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Crypto Wallet",
    "default_popup": "browser_action.html"
  },
  "permissions": [
    "storage"
  ]
}